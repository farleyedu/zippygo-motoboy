    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "zippygomotoboy",
    "userInterfaceStyle": "automatic",

    // ðŸ”§ Hermes ligado explicitamente (Expo SDK recente jÃ¡ usa por padrÃ£o, mas deixamos explÃ­cito)
    "jsEngine": "hermes",

    // ðŸ”§ Nova arquitetura jÃ¡ estÃ¡ ativa (bom para performance com Hermes)
